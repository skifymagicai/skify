# .env.example for Skify
# Copy to .env and fill in production values

# Backend
PORT=4000
NODE_ENV=production
DATABASE_URL=postgres://user:password@db:5432/skify
REDIS_URL=redis://redis:6379
S3_ENDPOINT=https://s3.example.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=skify-bucket

# Frontend
VITE_API_URL=http://localhost:4000

# Shared
JWT_SECRET=your-jwt-secret# Skify Core Environment Variables
NODE_ENV=development
PORT=5000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Application URLs
APP_BASE_URL=http://localhost:5000

# Razorpay Payment Integration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret

# S3 Compatible Storage (Optional)
STORAGE_PROVIDER=local
S3_BUCKET=skify-uploads
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET=your-s3-secret
S3_REGION=us-east-1

# AI Analysis Integration (Optional)
AI_ANALYZE_ENDPOINT=https://api.openai.com/v1/chat/completions
AI_API_KEY=your-ai-api-key

# Upstash Redis Auto-Creation (Optional)
UPSTASH_EMAIL=your-upstash-email
UPSTASH_PASSWORD=your-upstash-password
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
REDIS_URL=

# Feature Toggles
DISABLE_UPSTASH_AUTOCREATE=false